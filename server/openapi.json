{
  "openapi": "3.0.0",
  "info": {
    "description": "An API for a Bucketlist service",
    "title": "bucketlist-api",
    "version": "v1"
  },
  "servers": [
    {
      "url": "http://localhost:8080/api/v1"
    },
    {
      "url": "http://localhost:8080"
    }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "Logs a user in.",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": [
                  "username",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "A JSON object with jwt",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "token": {
                      "type": "string",
                      "example": "eybh.dnsj.kkdj"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad login details"
          },
          "401": {
            "description": "Invalid username or password"
          },
          "default": {
            "description": "Unexpected error"
          }
        }
      }
    },
    "/auth/signup": {
      "post": {
        "summary": "Creates a new user.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "A JSON object with jwt",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "token": {
                      "type": "string",
                      "example": "eybh.dnsj.kkdj"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad signup details"
          },
          "default": {
            "description": "Unexpected error"
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "summary": "Logs a user out",
        "responses": {
          "200": {
            "description": "Success response"
          }
        }
      }
    },
    "/bucketlists": {
      "post": {
        "summary": "Creates a new bucket list",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "created_by": {
                    "type": "string"
                  }
                },
                "required": [
                  "name",
                  "created_by"
                ]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "_id": {
                      "type": "string",
                      "example": "5bdhfkkeu46hjd"
                    },
                    "name": {
                      "type": "string",
                      "example": "Bucket1"
                    },
                    "created_by": {
                      "type": "string",
                      "example": "b7jjdhhdkdkjdjkkd"
                    },
                    "createdAt": {
                      "type": "string",
                      "example": "iso5366"
                    },
                    "updatedAt": {
                      "type": "string",
                      "example": "iso5366"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid inputs details"
          },
          "401": {
            "description": "Unauthorized"
          },
          "default": {
            "description": "Unexpected error"
          }
        }
      },
      "get": {
        "summary": "List all the created bucket list",
        "parameters": [
          {
            "name": "created_by",
            "in": "query",
            "description": "bucketlist creator id.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "bucketlist id.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "bucketlist id.",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "q",
            "in": "query",
            "description": "search string.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "success response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "bucketlist": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "$ref": "#/components/schemas/Bucketlist"
                      }
                    },
                    "page": {
                      "type": "number",
                      "example": 1
                    },
                    "pages": {
                      "type": "number",
                      "example": 10
                    },
                    "total": {
                      "type": "number",
                      "example": 50
                    }
                  }
                }
              }
            }
          },
          "204": {
            "description": "No content"
          },
          "401": {
            "description": "Unauthorized"
          },
          "default": {
            "description": "Unexpected error"
          }
        }
      }
    },
    "/bucketlist/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "bucketlist id.",
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "summary": "Gets a single bucket list",
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Item"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "not found"
          },
          "default": {
            "description": "Unexpected error"
          }
        }
      },
      "put": {
        "summary": "Update this bucket list",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Bucket1"
                  }
                },
                "required": [
                  "name"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "_id": {
                      "type": "string",
                      "example": "5bdhfkkeu46hjd"
                    },
                    "name": {
                      "type": "string",
                      "example": "Bucket1"
                    },
                    "created_by": {
                      "type": "string",
                      "example": "b7jjdhhdkdkjdjkkd"
                    },
                    "createdAt": {
                      "type": "string",
                      "example": "iso5366"
                    },
                    "updatedAt": {
                      "type": "string",
                      "example": "iso5367"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid inputs details"
          },
          "401": {
            "description": "Unauthorized"
          },
          "default": {
            "description": "Unexpected error"
          }
        }
      },
      "delete": {
        "summary": "delete this bucket list",
        "responses": {
          "200": {
            "description": "success! deleted"
          },
          "400": {
            "description": "Invalid bucketlist id"
          },
          "default": {
            "description": "Unexpected error"
          }
        }
      }
    },
    "/bucketlist/{id}/items": {
      "post": {
        "summary": "Creates a new item in bucket list",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "bucketlist id.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Item"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "success! created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Item"
                }
              }
            }
          },
          "400": {
            "description": "Invalid inputs details"
          },
          "401": {
            "description": "Unauthorized"
          },
          "default": {
            "description": "Unexpected error"
          }
        }
      },
      "get": {
        "summary": "List all the created items in a bucket list",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "bucketlist id.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "$ref": "#/components/schemas/Item"
                      }
                    }
                  }
                }
              }
            }
          },
          "204": {
            "description": "no content"
          },
          "401": {
            "description": "Unauthorized"
          },
          "default": {
            "description": "Unexpected error"
          }
        }
      }
    },
    "/bucketlist/{id}/items/{item_id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "bucketlist id.",
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "item_id",
          "in": "path",
          "required": true,
          "description": "item id.",
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "summary": "Get a single item in a bucketlist",
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Item"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "not found"
          },
          "default": {
            "description": "Unexpected error"
          }
        }
      },
      "put": {
        "summary": "update a bucket list item",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Visit mount everest"
                  },
                  "done": {
                    "type": "string",
                    "example": false
                  }
                },
                "required": [
                  "name",
                  "done"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "_id": {
                      "type": "string",
                      "example": "5bdhfkkeu46hjd"
                    },
                    "name": {
                      "type": "string",
                      "example": "Visit mount everest"
                    },
                    "done": {
                      "type": "boolean",
                      "example": true
                    },
                    "createdAt": {
                      "type": "string",
                      "example": "iso5366"
                    },
                    "updatedAt": {
                      "type": "string",
                      "example": "iso5367"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input details"
          },
          "401": {
            "description": "Unauthorized"
          },
          "default": {
            "description": "Unexpected error"
          }
        }
      },
      "delete": {
        "summary": "Delete an item in a bucketlist",
        "responses": {
          "200": {
            "description": "success! deleted"
          },
          "400": {
            "description": "Invalid bucketlist id or item id"
          },
          "default": {
            "description": "Unexpected error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "hfjjf637hhf"
          },
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": [
          "username",
          "password"
        ]
      },
      "Item": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "done": {
            "type": "boolean",
            "default": false
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          }
        },
        "required": [
          "name"
        ]
      },
      "Bucketlist": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "example": "bjjddu6uud"
          },
          "name": {
            "type": "string",
            "example": "Bucket1"
          },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "$ref": "#/components/schemas/Item"
            }
          },
          "created_by": {
            "type": "object",
            "$ref": "#/components/schemas/User"
          },
          "createdAt": {
            "type": "string"
          },
          "updatedAt": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "created_by"
        ]
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  },
  "security": [
    {
      "BasicAuth": []
    }
  ]
}